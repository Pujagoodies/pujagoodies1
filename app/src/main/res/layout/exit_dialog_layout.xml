<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/exit_dialog_bg">


    <ImageView
        android:id="@+id/emoji"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="80dp"
        android:src="@drawable/logov2" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emoji"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Please, share this app to your relatives and friends"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would you like to share our App ?"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_below="@+id/tv"
        android:layout_marginStart="15dp"
        android:textSize="23sp"/>

    <ImageButton
        android:id="@+id/btnNo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tvBelow"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/no_button_bg"
        android:src="@drawable/ic_no" />

    <ImageButton
        android:id="@+id/btnYes"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tvBelow"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/yes_button_bg"
        android:src="@drawable/ic_baseline_done_24" />

</RelativeLayout>