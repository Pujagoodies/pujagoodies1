<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingEnd="20dp"
    android:layout_width="150dp"
    android:layout_height="200dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="130dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/sahityaImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile_svgrepo_com"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sahityaImageAboutTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="10sp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:padding="10dp"
                android:background="@drawable/no_button_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/sahityaImage"
                app:layout_constraintStart_toStartOf="@+id/sahityaImage"
                app:layout_constraintTop_toBottomOf="@+id/sahityaImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sahityaTitle"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="12sp"
        android:paddingStart="5dp"
        android:paddingTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintStart_toStartOf="@+id/cardView4"
        app:layout_constraintTop_toBottomOf="@+id/cardView4" />

    <TextView
        android:id="@+id/sahityaTitleCategories"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingStart="5dp"
        android:text="title categories"
        android:textStyle="bold"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sahityaTitle"
        app:layout_constraintStart_toStartOf="@+id/sahityaTitle"
        app:layout_constraintTop_toBottomOf="@+id/sahityaTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>